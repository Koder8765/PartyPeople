@model Event;

@{
    ViewData["Title"] = "Update Event";
}

<form asp-controller="Event" asp-action="Edit">
    <div class="d-flex align-items-center mb-2">
        <h4 class="me-auto mb-0">Update Event</h4>
        <a class="btn btn-outline-primary btn-sm m-1" role="button" asp-controller="Event" asp-action="Index">Back</a>
        <input type="submit" value="Update" class="btn btn-primary btn-sm m-1" />
    </div>

    <div class="card">
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <input asp-for="Id" type="hidden" />

            <div class="row mb-3 g-3 align-items-center">
                <div class="col-sm-2">
                    <label asp-for="Description" class="col-form-label"></label>
                </div>
                <div class="col-sm-3">
                    <input asp-for="Description" class="form-control" />
                </div>
                <div class="col-auto">
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3 g-3 align-items-center">
                <div class="col-sm-2">
                    <label asp-for="StartDateTime" class="col-form-label"></label>
                </div>
                <div class="col-sm-3">
                    <input asp-for="StartDateTime" class="form-control" />
                </div>
                <div class="col-auto">
                    <span asp-validation-for="StartDateTime" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3 g-3 align-items-center">
                <div class="col-sm-2">
                    <label asp-for="EndDateTime" class="col-form-label"></label>
                </div>
                <div class="col-sm-3">
                    <input asp-for="EndDateTime" class="form-control" />
                </div>
                <div class="col-auto">
                    <span asp-validation-for="EndDateTime" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3 g-3 align-items-center">
                <div class="col-sm-2">
                    <label asp-for="MaximumCapacity" class="col-form-label"></label>
                </div>
                <div class="col-sm-3">
                    <input asp-for="MaximumCapacity" class="form-control" />
                </div>
                <div class="col-auto">
                    <span asp-validation-for="MaximumCapacity" class="text-danger"></span>
                </div>
            </div>

        </div>
    </div>
</form>