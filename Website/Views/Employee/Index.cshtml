@model EmployeeListViewModel;

@{
    ViewData["Title"] = "Employees";
}

<div class="d-flex align-items-center p-2">
    <h4 class="me-auto mb-0">Employees</h4>
    <a class="btn btn-primary btn-sm m-1" role="button" asp-controller="Employee" asp-action="Create">Add New</a>
</div>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Date of Birth</th>
                <th scope="col" class="col-sm-2"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model.Employees)
            {
                <tr>
                    <td>@employee.FirstName</td>
                    <td>@employee.LastName</td>
                    <td>@employee.DateOfBirth.ToString("dd/MM/yyyy")</td>
                    <td class="text-end py-1">
                        <a class="btn btn-outline-primary btn-sm" role="button" asp-controller="Employee" asp-action="Details" asp-route-id="@employee.Id">View</a>
                    </td>
                </tr>
            }
            @if (!Model.Employees.Any())
            {
                <tr>
                    <td colspan="4">No employees.</td>
                </tr>
            }
        </tbody>
    </table>
</div>